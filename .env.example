# Backend API URL used by the browser (Next.js public env var)
# Local development:
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
#
# Production example (Railway):
# NEXT_PUBLIC_BACKEND_URL=https://txray.up.railway.app

# Admin Token for bypassing payments (optional)
# DO NOT set this in public deployments to avoid leakage.
# Users should configure it via the UI.
NEXT_PUBLIC_ADMIN_TOKEN=

# X402 Configuration
# If true, the frontend will check for x402 support and handle 402 responses
NEXT_PUBLIC_ENABLE_X402=true

# ERC-8004 Agent ID for reputation/feedback system
NEXT_PUBLIC_ERC8004_AGENT_ID=22715

